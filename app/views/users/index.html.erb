<div><%= flash[:notice] %></div>


<div class="container">
  <div class="row">
    <!--部分テンプレート化！-->
    <%= render 'layouts/profile_bookpost', user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <div class="mt-3">
        <h3>Users</h3>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
          </tr>
        </thead>

        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>