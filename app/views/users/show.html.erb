<div><%= flash[:notice] %></div>

<div class="container">
  <div class="row">

  <%= render 'layouts/profile_bookpost', user: @user, book: @book %>



<div class="col-md-8 offset-md-1">
  <div class="mt-3">
    <h2>Books</h2>
  </div>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>

        <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.get_image(100, 100) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>

      <td><%= book.body %></td>
     </tr>
  </tbody>
  <% end %>

  </table>
</div>

  </div>
</div>